<h3 class="text-secondary">{{sourceText}}</h3>

<form action="/read" method="GET">
    <input type="hidden" name="source" value="{{source}}" />
    <input class="form-control mb-2" type="text" name="url" placeholder="Type {{sourceText}} URL here" autofocus autocomplete="off" />
    <button class="btn btn-success">Submit</button>
</form>